{% extends 'default_frame.twig' %}

{% set menus = ['store', 'plugin', 'plugin_list'] %}

{% block title %}商品規格画像プラグイン{% endblock %}
{% block sub_title %}設定{% endblock %}

{% form_theme form 'Form/bootstrap_3_horizontal_layout.html.twig' %}

{% block main %}
    <form class="form-horizontal" method="post" action="{{ url('plugin_ApgProductClassImage_config') }}">
        {{ form_widget(form._token) }}
        <div class="row" id="aside_wrap">
            <div class="col-md-9">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">フロント機能</h3>
                    </div><!-- /.box-header -->
                    <div class="box-body form-horizontal">
                        {{ form_row(form.image_insert_type) }}
                        <p style="padding: 20px;font-size: 0.8em;background: #eee;">
                            自動挿入は、defaultテーマをベースとした機能です。<br/>
                            オリジナルのテーマでも自動挿入の対象となる場合がありますが、テーマの構造によっては自動挿入されません。
                            <br/>自動挿入されない場合、[自動挿入なし]を選択し、テーマを編集してください。
                        </p>
                    </div><!-- /.box-body -->
                </div><!-- /.box -->
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">画像管理</h3>
                    </div><!-- /.box-header -->
                    <div class="box-body form-horizontal">
                        {{ form_row(form.image_max_size) }}
                    </div><!-- /.box-body -->
                </div><!-- /.box -->
            </div><!-- /.col -->
            <div class="col-md-3" id="aside_column">
                <div id="common_box" class="col_inner">
                    <div id="common_button_box" class="box no-header">
                        <div id="common_button_box__body" class="box-body">
                            <div id="common_button_box__edit_button" class="row text-center">
                                <div class="col-sm-6 col-sm-offset-3 col-md-12 col-md-offset-0">
                                    <button class="btn btn-primary btn-block btn-lg" type="submit">設定</button>
                                </div>
                            </div>
                        </div><!-- /.box-body -->
                    </div><!-- /.box -->
                </div>
            </div><!-- /.col -->
        </div>
    </form>
{% endblock main %}
